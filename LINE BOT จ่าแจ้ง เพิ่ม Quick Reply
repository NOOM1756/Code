const PROFILE_PICTURE_FOLDER_NAME = 'LINE_Bot_Profile_Pictures';
const COMMAND_FILES_FOLDER_NAME = 'LINE_Bot_Command_Files';

// Global cache for spreadsheet data
const CACHE_EXPIRATION_SECONDS = 300; // 5 minutes

function doPost(e) {
  try {
    const event = JSON.parse(e.postData.contents).events[0];
    const userId = event.source.userId;

    // Log the incoming message for debugging purposes
    Logger.log(`Received message from user: ${userId}, type: ${event.type}`);
    if (event.type === 'message' && event.message.type === 'text') {
      Logger.log(`Message text: ${event.message.text}`);
    }

    if (event.type === 'message') {
      if (event.message.type === 'text') {
        const text = event.message.text.trim();

        if (text.startsWith('‡∏•‡∏á‡∏ó‡∏∞‡πÄ‡∏ö‡∏µ‡∏¢‡∏ô')) handleRegistration(userId, text);
        else if (text === '/‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ö‡∏∏‡∏ï‡∏£‡∏Ç‡∏≠‡∏á‡∏â‡∏±‡∏ô') handleCommandChildInfo(event);
        else if (text === '/‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏†‡∏£‡∏£‡∏¢‡∏≤‡∏Ç‡∏≠‡∏á‡∏â‡∏±‡∏ô') handleCommandWifeInfo(event);
        else if (text === '/‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏û‡∏•‡∏Ç‡∏≠‡∏á‡∏â‡∏±‡∏ô') handleCommandPersonnelInfo(event);
        else if (text.startsWith('/‡∏ï‡∏±‡πâ‡∏á‡∏£‡∏π‡∏õ‡πÇ‡∏õ‡∏£‡πÑ‡∏ü‡∏•‡πå ')) handleSetProfilePicture(userId, text);
        else if (text === '/‡πÄ‡∏ß‡∏£‡∏Ç‡∏≠‡∏á‡∏â‡∏±‡∏ô') handleCommandDutyToday(event);
        else if (text === '/‡πÄ‡∏ß‡∏£‡∏õ‡∏£‡∏∞‡∏à‡∏≥‡πÄ‡∏î‡∏∑‡∏≠‡∏ô') handleMonthlyDuty(event);
        else if (text === '/‡πÄ‡∏ß‡∏£‡∏¢‡πâ‡∏≠‡∏ô‡∏´‡∏•‡∏±‡∏á') handlePastDuties(event);
        else if (text.startsWith('/‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏û‡∏• ')) handleAddPersonnel(userId, text);
        else if (text.startsWith('/‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏û‡∏• ')) handleEditPersonnel(userId, text);
        else if (text.startsWith('/‡∏•‡∏ö‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏û‡∏• ')) handleDeletePersonnel(userId, text);
        else if (text === '/‡∏î‡∏π‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏û‡∏•‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î') handleViewAllPersonnel(event);
        else if (text.trim() === '/‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏ö‡∏∏‡∏ï‡∏£') handleAddChild(userId, text); 
        else if (text.startsWith('/‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ö‡∏∏‡∏ï‡∏£')) handleSaveNewChild(userId, text);
        else if (text.startsWith('/‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏ö‡∏∏‡∏ï‡∏£')) handleEditChild(userId, text); // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡πà‡∏≤‡∏°‡∏µ else if ‡∏ô‡∏µ‡πâ‡∏≠‡∏¢‡∏π‡πà‡πÅ‡∏•‡πâ‡∏ß
        // --- ‚¨áÔ∏è ‡∏ô‡∏µ‡πà‡∏Ñ‡∏∑‡∏≠‡πÇ‡∏Ñ‡πâ‡∏î‡∏ö‡∏•‡πá‡∏≠‡∏Å‡πÉ‡∏´‡∏°‡πà‡∏ó‡∏µ‡πà‡∏ï‡πâ‡∏≠‡∏á‡πÄ‡∏û‡∏¥‡πà‡∏° ‚¨áÔ∏è ---
else if (text.startsWith('/‡πÄ‡∏ó‡∏°‡πÄ‡∏û‡∏•‡∏ï‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏ö‡∏∏‡∏ï‡∏£ ')) {
  const childNameToGetTemplate = text.replace('/‡πÄ‡∏ó‡∏°‡πÄ‡∏û‡∏•‡∏ï‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏ö‡∏∏‡∏ï‡∏£ ', '').trim();
  const militaryId = getUserMilitaryId(userId);
  const childSheet = SpreadsheetApp.getActive().getSheetByName('‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ö‡∏∏‡∏ï‡∏£-‡∏ò‡∏¥‡∏î‡∏≤');
  const data = childSheet.getDataRange().getValues();
  let found = false;
  for (let i = 1; i < data.length; i++) {
      if (String(data[i][0]).trim() === militaryId && String(data[i][1]).trim() === childNameToGetTemplate) {
          const childData = data[i];
          const template = `/‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏ö‡∏∏‡∏ï‡∏£\n‡∏ä‡∏∑‡πà‡∏≠-‡∏™‡∏Å‡∏∏‡∏•‡∏ö‡∏∏‡∏ï‡∏£‡πÄ‡∏î‡∏¥‡∏° : ${childData[1]}\n‡∏ä‡∏∑‡πà‡∏≠-‡∏™‡∏Å‡∏∏‡∏•‡∏ö‡∏∏‡∏ï‡∏£‡πÉ‡∏´‡∏°‡πà : ${childData[1]}\n‡∏ß‡∏±‡∏ô‡πÄ‡∏Å‡∏¥‡∏î(DD/MM/YYYY ‡∏û.‡∏®.) : ${childData[2]}\n‡∏≠‡∏≤‡∏¢‡∏∏ : ${childData[3]}\n‡∏£‡∏∞‡∏î‡∏±‡∏ö‡∏Å‡∏≤‡∏£‡∏®‡∏∂‡∏Å‡∏©‡∏≤ : ${childData[4]}\n‡∏£‡∏∞‡∏î‡∏±‡∏ö‡∏ä‡∏±‡πâ‡∏ô : ${childData[5]}\n‡∏ä‡∏∑‡πà‡∏≠‡∏™‡∏ñ‡∏≤‡∏ô‡∏®‡∏∂‡∏Å‡∏©‡∏≤ : ${childData[6]}\n‡∏ú‡∏•‡∏Å‡∏≤‡∏£‡πÄ‡∏£‡∏µ‡∏¢‡∏ô : ${childData[7]}`;
          sendReply(userId, `üìù ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏î‡πâ‡∏≤‡∏ô‡∏•‡πà‡∏≤‡∏á‡∏ô‡∏µ‡πâ‡πÑ‡∏õ‡∏ß‡∏≤‡∏á‡πÅ‡∏•‡∏∞‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç ‡∏à‡∏≤‡∏Å‡∏ô‡∏±‡πâ‡∏ô‡∏™‡πà‡∏á‡∏Å‡∏•‡∏±‡∏ö‡∏°‡∏≤‡∏≠‡∏µ‡∏Å‡∏Ñ‡∏£‡∏±‡πâ‡∏á‡∏Ñ‡∏£‡∏±‡∏ö\n\n${template}`);
          found = true;
          break;
      }
  }
  if (!found) {
      sendReply(userId, `‚ùå ‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ö‡∏∏‡∏ï‡∏£‡∏ó‡∏µ‡πà‡∏ä‡∏∑‡πà‡∏≠ "${childNameToGetTemplate}" ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏™‡∏£‡πâ‡∏≤‡∏á‡πÄ‡∏ó‡∏°‡πÄ‡∏û‡∏•‡∏ï`);
  }
}
// --- ‚¨ÜÔ∏è ‡∏™‡∏¥‡πâ‡∏ô‡∏™‡∏∏‡∏î‡πÇ‡∏Ñ‡πâ‡∏î‡∏ö‡∏•‡πá‡∏≠‡∏Å‡πÉ‡∏´‡∏°‡πà ‚¨ÜÔ∏è ---
        else if (text.startsWith('/‡∏•‡∏ö‡∏ö‡∏∏‡∏ï‡∏£') || text.startsWith('/‡∏¢‡∏∑‡∏ô‡∏¢‡∏±‡∏ô‡∏•‡∏ö‡∏ö‡∏∏‡∏ï‡∏£')) {
             handleDeleteChild(userId, text);
           }
        else if (text === '/‡∏î‡∏π‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ö‡∏∏‡∏ï‡∏£‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î') handleViewAllChildren(event);
        else if (text.startsWith('/‡πÄ‡∏ó‡∏°‡πÄ‡∏û‡∏•‡∏ï‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏†‡∏£‡∏£‡∏¢‡∏≤ ')) {
             const wifeNameToGetTemplate = text.replace('/‡πÄ‡∏ó‡∏°‡πÄ‡∏û‡∏•‡∏ï‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏†‡∏£‡∏£‡∏¢‡∏≤ ', '').trim();
             const militaryId = getUserMilitaryId(userId);
             const wifeSheet = SpreadsheetApp.getActive().getSheetByName('‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏†‡∏£‡∏£‡∏¢‡∏≤');
             const data = wifeSheet.getDataRange().getValues();
             let found = false;
             for (let i = 1; i < data.length; i++) {
                if (String(data[i][0]).trim() === militaryId && String(data[i][1]).trim() === wifeNameToGetTemplate) {
                  const wifeData = data[i];
                  const template = `/‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏†‡∏£‡∏£‡∏¢‡∏≤\n‡∏ä‡∏∑‡πà‡∏≠-‡∏™‡∏Å‡∏∏‡∏•‡πÄ‡∏î‡∏¥‡∏° : ${wifeData[1]}\n‡∏ä‡∏∑‡πà‡∏≠-‡∏™‡∏Å‡∏∏‡∏•‡πÉ‡∏´‡∏°‡πà : ${wifeData[1]}\n‡∏ß‡∏±‡∏ô‡πÄ‡∏Å‡∏¥‡∏î(DD/MM/YYYY ‡∏û.‡∏®.) : ${wifeData[2]}\n‡∏≠‡∏≤‡∏¢‡∏∏ : ${wifeData[3]}\n‡πÄ‡∏•‡∏Ç‡∏ö‡∏±‡∏ï‡∏£ ‡∏õ‡∏ä‡∏ä. : ${wifeData[4]}\n‡πÄ‡∏ö‡∏≠‡∏£‡πå‡πÇ‡∏ó‡∏£ : ${wifeData[5]}\n‡∏Å‡∏£‡∏∏‡πä‡∏õ‡πÄ‡∏•‡∏∑‡∏≠‡∏î : ${wifeData[6]}\n‡∏≠‡∏≤‡∏ä‡∏µ‡∏û : ${wifeData[7]}\n‡∏ï‡∏≥‡πÅ‡∏´‡∏ô‡πà‡∏á : ${wifeData[8]}\n‡∏™‡∏±‡∏á‡∏Å‡∏±‡∏î : ${wifeData[9]}`;
                  sendReply(userId, `üìù ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏î‡πâ‡∏≤‡∏ô‡∏•‡πà‡∏≤‡∏á‡∏ô‡∏µ‡πâ‡πÑ‡∏õ‡∏ß‡∏≤‡∏á‡πÅ‡∏•‡∏∞‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç ‡∏à‡∏≤‡∏Å‡∏ô‡∏±‡πâ‡∏ô‡∏™‡πà‡∏á‡∏Å‡∏•‡∏±‡∏ö‡∏°‡∏≤‡∏≠‡∏µ‡∏Å‡∏Ñ‡∏£‡∏±‡πâ‡∏á‡∏Ñ‡∏£‡∏±‡∏ö\n\n${template}`);
                  found = true;
                  break;
                }
             }
             if (!found) sendReply(userId, `‚ùå ‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏†‡∏£‡∏£‡∏¢‡∏≤‡∏ó‡∏µ‡πà‡∏ä‡∏∑‡πà‡∏≠ "${wifeNameToGetTemplate}"`);
           }
           else if (text.startsWith('/‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏†‡∏£‡∏£‡∏¢‡∏≤')) handleSaveNewWife(userId, text);
        else if (text.trim() === '/‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏†‡∏£‡∏£‡∏¢‡∏≤') handleAddWife(userId, text);
        else if (text.startsWith('/‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏†‡∏£‡∏£‡∏¢‡∏≤')) handleSaveNewWife(userId, text);
        else if (text.startsWith('/‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏†‡∏£‡∏£‡∏¢‡∏≤ ')) handleEditWife(userId, text);
        else if (text.startsWith('/‡∏•‡∏ö‡∏†‡∏£‡∏£‡∏¢‡∏≤') || text.startsWith('/‡∏¢‡∏∑‡∏ô‡∏¢‡∏±‡∏ô‡∏•‡∏ö‡∏†‡∏£‡∏£‡∏¢‡∏≤')) {
  handleDeleteWife(userId, text);
}
        else if (text === '/‡∏î‡∏π‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏†‡∏£‡∏£‡∏¢‡∏≤‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î') handleViewAllWives(event);
        else if (text.startsWith('/‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÄ‡∏ß‡∏£ ')) handleAddDuty(userId, text);
        else if (text.startsWith('/‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡πÄ‡∏ß‡∏£ ')) handleEditDuty(userId, text);
        else if (text.startsWith('/‡∏•‡∏ö‡πÄ‡∏ß‡∏£ ')) handleDeleteDuty(userId, text);
        else if (text === '/‡∏î‡∏π‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÄ‡∏ß‡∏£‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î') handleViewAllDuties(event);
        else if (text.startsWith('/‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏´‡∏ô‡∏±‡∏á‡∏™‡∏∑‡∏≠‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á ')) handleAddCommand(userId, text);
        else if (text.startsWith('/‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏´‡∏ô‡∏±‡∏á‡∏™‡∏∑‡∏≠‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á ')) handleEditCommand(userId, text);
        else if (text.startsWith('/‡∏•‡∏ö‡∏´‡∏ô‡∏±‡∏á‡∏™‡∏∑‡∏≠‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á ')) handleDeleteCommand(userId, text);
        else if (text.startsWith('/‡∏Ñ‡πâ‡∏ô‡∏´‡∏≤‡∏´‡∏ô‡∏±‡∏á‡∏™‡∏∑‡∏≠‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á ')) handleSearchCommand(userId, text);
        else if (text.startsWith('/‡∏•‡∏¥‡∏á‡∏Å‡πå‡πÑ‡∏ü‡∏•‡πå‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á ')) handleLinkCommandFile(userId, text);
        else if (text === '/‡∏ö‡∏∏‡∏ï‡∏£‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î‡∏Ç‡∏≠‡∏á‡∏Å‡∏≠‡∏á‡∏£‡πâ‡∏≠‡∏¢') handleCompanyChildrenReport(event);
        else if (text === '/‡∏™‡∏£‡∏∏‡∏õ‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô') handleGenerateReport(event);
        else if (text.startsWith('/‡∏Ñ‡πâ‡∏ô‡∏´‡∏≤‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏û‡∏• ')) handleSearchPersonnel(userId, text);
        else if (text === '/‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î') handleViewAllCommands(userId);
        else if (text === '/‡∏ä‡πà‡∏ß‡∏¢‡πÄ‡∏´‡∏•‡∏∑‡∏≠' || text === '/help') sendReply(userId, getHelpMessage());
        else if (text.toLowerCase() === '‡∏™‡∏ß‡∏±‡∏™‡∏î‡∏µ' || text.toLowerCase() === '‡πÄ‡∏°‡∏ô‡∏π' || text.toLowerCase() === 'menu' || text.toLowerCase() === '‡∏Å‡∏•‡∏±‡∏ö') {
         const welcomeMessage = "‡∏™‡∏ß‡∏±‡∏™‡∏î‡∏µ‡∏Ñ‡∏£‡∏±‡∏ö, ‡∏£‡∏∞‡∏ö‡∏ö‡∏à‡∏±‡∏î‡∏Å‡∏≤‡∏£‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏û‡∏•‡∏û‡∏£‡πâ‡∏≠‡∏°‡πÉ‡∏´‡πâ‡∏ö‡∏£‡∏¥‡∏Å‡∏≤‡∏£‡∏Ñ‡∏£‡∏±‡∏ö üíÇ‚Äç‚ôÇÔ∏è\n\n‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÄ‡∏°‡∏ô‡∏π‡∏ó‡∏µ‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡πÑ‡∏î‡πâ‡πÄ‡∏•‡∏¢‡∏Ñ‡∏£‡∏±‡∏ö";
         const menuItems = [
           { label: "üë§ ‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏Ç‡∏≠‡∏á‡∏â‡∏±‡∏ô", text: "/‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏û‡∏•‡∏Ç‡∏≠‡∏á‡∏â‡∏±‡∏ô" },
           { label: "‚è∞ ‡πÄ‡∏ß‡∏£‡∏Ç‡∏≠‡∏á‡∏â‡∏±‡∏ô‡∏ß‡∏±‡∏ô‡∏ô‡∏µ‡πâ", text: "/‡πÄ‡∏ß‡∏£‡∏Ç‡∏≠‡∏á‡∏â‡∏±‡∏ô" },
           { label: "üë™ ‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏Ñ‡∏£‡∏≠‡∏ö‡∏Ñ‡∏£‡∏±‡∏ß", text: "/‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏Ñ‡∏£‡∏≠‡∏ö‡∏Ñ‡∏£‡∏±‡∏ß" }, // ‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á‡πÄ‡∏°‡∏ô‡∏π‡∏¢‡πà‡∏≠‡∏¢
           { label: "üìö ‡∏î‡∏π‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î", text: "/‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î" }
         ];
         sendQuickReply(userId, welcomeMessage, menuItems);
       }
       else if (text === '/‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏Ñ‡∏£‡∏≠‡∏ö‡∏Ñ‡∏£‡∏±‡∏ß') {
